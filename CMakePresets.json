{
    "version": 6,
    "configurePresets": [
        {
            "name": "linux",
            "generator": "Unix Makefiles",
            "hidden": true
        },
        {
            "name": "default",
            "inherits": "linux",
            "displayName": "Default build",
            "description": "Default build",
            "binaryDir": "${sourceDir}/build/"
        },
        {
            "name": "ut",
            "inherits": "linux",
            "displayName": "Unit tests",
            "description": "Build and run unit tests",
            "binaryDir": "${sourceDir}/build_ut/",
            "cacheVariables": {
                "UNIT_TESTS": "1",
                "USE_LOGGING": "4",
                "CMAKE_BUILD_TYPE": "Debug"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "default",
            "displayName": "Default build",
            "configurePreset": "default"
        },
        {
            "name": "ut",
            "displayName": "Unit Tests",
            "configurePreset": "ut",
            "targets": [
                "LinxIpc-ut"
            ]
        }
    ],
    "testPresets": [
        {
            "name": "ut",
            "displayName": "Unit Tests",
            "configurePreset": "ut",
            "output": {
                "outputOnFailure": true,
                "verbosity": "verbose"
            }
        }
    ]
}
